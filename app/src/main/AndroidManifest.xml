<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.maktab36.taskapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.activity.AdminPanelActivity"
            android:label="@string/label_admin_panel"/>
        <activity android:name=".controller.activity.SignUpActivity"
            android:label="@string/label_sign_up"/>
        <activity android:name=".controller.activity.LoginActivity"
            android:label="@string/label_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.TabViewPagerActivity" />
    </application>

</manifest>